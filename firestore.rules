rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Only authenticated users can access
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Specific rules for different collections
    match /settings/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.email == "kekanaletago58@gmail.com";
    }
    
    match /inventory/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.email == "kekanaletago58@gmail.com";
    }
    
    match /sales/{saleId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false; // No one can modify or delete sales
    }
    
    match /prices/{priceId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.email == "kekanaletago58@gmail.com";
    }
    
    match /daily_reports/{reportId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == "system"; // Only system can write
    }
    
    match /user_profiles/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }
  }
}